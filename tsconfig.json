{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "tests",
    "node_modules"
  ]
}
